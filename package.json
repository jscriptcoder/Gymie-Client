{
  "name": "gymie",
  "version": "1.0.0",
  "description": "Client and Server that allows to train AI agents written in Javascript on OpenAI Gym environments",
  "main": "dist/index.js",
  "bin" : { "gymie_server" : "dist/server.py" },
  "scripts": {
    "kill-server": "./src/server/shutdown.sh",
    "start-server": "python src/server/gymie.py",
    "test-server": "python src/server/test_gymie.py",
    "test-client": "ts-node src/client/Gymie.test.ts",
    "test-client-server-down": "ts-node src/client/Gymie.server-down.test.ts",
    "test-env": "ts-node src/client/Env.test.ts",
    "test-commander": "ts-node src/client/Commander.test.ts",
    "test-deferred": "ts-node src/client/Deferred.test.ts",
    "test-requester": "ts-node src/client/Requester.test.ts",
    "pretest-server-down": "yarn kill-server 5000",
    "test-server-down": "yarn test-client-server-down && yarn test-commander && yarn test-deferred && yarn test-requester",
    "pretest-server-up": "yarn start-server &",
    "test-server-up": "yarn test-client && yarn test-env",
    "test": "yarn test-server && yarn test-server-down && yarn test-server-up",
    "posttest": "yarn kill-server 5000",
    "run-on-python": "python src/runs/random_agent.py",
    "prerun-on-node": "yarn start-server &",
    "run-on-node": "ts-node --script-mode --transpile-only src/runs/randomAgent.ts",
    "predocs": "rm -rf docs",
    "docs": "typedoc",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cp src/server/gymie.py dist/server.py",
    "release": "yarn docs && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscriptcoder/Gymie.git"
  },
  "keywords": [
    "nodejs",
    "javascript",
    "python",
    "reinforcement-learning",
    "openai-gym",
    "tensorflowjs"
  ],
  "author": "Francisco Ramos <francisco.ramos@researchlab.ai>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jscriptcoder/Gymie/issues"
  },
  "homepage": "https://github.com/jscriptcoder/Gymie#readme",
  "devDependencies": {
    "@tsconfig/node10": "^1.0.7",
    "@types/tape": "^4.13.0",
    "@types/webgl2": "0.0.5",
    "@types/websocket": "^1.0.1",
    "@types/yargs": "^15.0.8",
    "tape": "^5.0.1",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@tensorflow/tfjs-node": "^2.6.0",
    "chalk": "^4.1.0",
    "websocket": "^1.0.32",
    "yargs": "^16.0.3"
  }
}
